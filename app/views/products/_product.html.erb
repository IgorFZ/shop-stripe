<div id="<%= dom_id product %>">
  <tr>
    <td> <%= product %> </td>
    <td> <%= number_to_currency(product.price/100.0) %> </td>
    <td>
      <% if @cart.include?(product) %>
        <%= button_to "Remove from cart", remove_from_cart_path(product), method: :delete %>
      <% else %>
        <%= button_to "Add to cart", add_to_cart_path(product) %>
      <% end %>
    </td>
    <td> <%= product.sales_count %> </td>
    <td> <%= link_to 'Show', product %> </td>
    <td> <%= link_to 'Edit', edit_product_path(product) %> </td>
    <td> <%= button_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
  </tr>
</div>
