<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Cart</th>
        <th>Sales</th>
        <th colspan = 3></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <%= render product %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="admin">
  <p><%= link_to "New product", new_product_path %></p>
  <p>Visits: <%= @visit_count %></p>
</div>

